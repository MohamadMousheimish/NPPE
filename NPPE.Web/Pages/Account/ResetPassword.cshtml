@page
@model NPPE.Web.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="mt-6 text-center text-2xl font-bold text-gray-900">
                Set a new password
            </h1>
        </div>

        <form class="mt-8 space-y-6" method="post">
            <input asp-for="Input.UserId" type="hidden" />
            <input asp-for="Input.Code" type="hidden" />

            <div asp-validation-summary="All" class="text-red-600 text-sm mb-4"></div>

            <div class="space-y-4">
                <div>
                    <label for="Password" class="sr-only">New Password</label>
                    <input asp-for="Input.Password"
                           type="password"
                           class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm rounded-md"
                           placeholder="New password" />
                    <span asp-validation-for="Input.Password" class="text-red-600 text-xs"></span>
                </div>
                <div>
                    <label for="ConfirmPassword" class="sr-only">Confirm New Password</label>
                    <input asp-for="Input.ConfirmPassword"
                           type="password"
                           class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm rounded-md"
                           placeholder="Confirm new password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-xs"></span>
                </div>
            </div>

            <div>
                <button type="submit"
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Reset password
                </button>
            </div>
        </form>

        <div class="text-center">
            <a asp-page="/Account/Login" class="font-medium text-blue-600 hover:text-blue-500">
                ← Back to sign in
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}