@page
@model NPPE.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Create an Account";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Join NPPE Exam Prep
            </h1>
            <p class="mt-2 text-center text-sm text-gray-600">
                Prepare for your National Professional Practice Exam
            </p>
        </div>

        <form class="mt-8 space-y-6" method="post">
            <div asp-validation-summary="All" class="text-red-600 text-sm"></div>

            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="FirstName" class="sr-only">First Name</label>
                    <input asp-for="Input.FirstName"
                           class="appearance-none rounded-t-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
                           placeholder="First Name" />
                    <span asp-validation-for="Input.FirstName" class="text-red-600 text-xs"></span>
                </div>
                <div>
                    <label for="LastName" class="sr-only">Last Name</label>
                    <input asp-for="Input.LastName"
                           class="appearance-none rounded-b-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
                           placeholder="Last Name" />
                    <span asp-validation-for="Input.LastName" class="text-red-600 text-xs"></span>
                </div>
                <div>
                    <label for="Email" class="sr-only">Email address</label>
                    <input asp-for="Input.Email"
                           class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm mt-2"
                           placeholder="Email address" />
                    <span asp-validation-for="Input.Email" class="text-red-600 text-xs"></span>
                </div>
                <div>
                    <label for="Password" class="sr-only">Password</label>
                    <input asp-for="Input.Password" type="password"
                           class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm mt-2"
                           placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-red-600 text-xs"></span>
                </div>
                <div>
                    <label for="ConfirmPassword" class="sr-only">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" type="password"
                           class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm mt-2"
                           placeholder="Confirm Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-xs"></span>
                </div>
            </div>

            <div>
                <button type="submit"
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Create Account
                </button>
            </div>
        </form>

        <div class="text-center">
            <a asp-page="/Account/Login" class="font-medium text-blue-600 hover:text-blue-500">
                Already have an account? Sign in
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}