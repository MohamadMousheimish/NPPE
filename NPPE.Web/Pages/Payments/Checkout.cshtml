@page
@model NPPE.Web.Pages.Payments.CheckoutModel
@{
    ViewData["Title"] = "Complete Your Purchase";
}

<div class="max-w-2xl mx-auto p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Unlock Full Access</h1>

    <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-lg font-medium text-gray-900">NPPE Exam Prep</h2>
        <p class="mt-1 text-gray-600">One-time payment for unlimited exam attempts</p>
        <div class="mt-4 flex justify-between items-center">
            <span class="text-2xl font-bold text-gray-900">CAD $29.00</span>
        </div>
    </div>

    <form method="post">
        <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
        <button type="submit"
                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
            Pay Now with Stripe
        </button>
    </form>

    <div class="mt-4 text-center">
        <a href="@Model.ReturnUrl" class="text-blue-600 hover:underline">← Back to Exam</a>
    </div>
</div>