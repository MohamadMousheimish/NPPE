@page
@model NPPE.Web.Pages.Admin.Exams.Questions.DeleteModel
@{
    ViewData["Title"] = "Delete Question";
}

<div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-900 mb-4">Delete Question</h1>
    <p class="text-gray-700 mb-6">
        Are you sure you want to delete this question? This action cannot be undone.
    </p>

    <div class="bg-gray-50 p-4 rounded-md mb-6">
        <p class="text-gray-800">@Model.QuestionText</p>
    </div>

    <form method="post" class="inline">
        <input asp-for="Id" type="hidden" />
        <input asp-for="ExamId" type="hidden" />
        <button type="submit"
                class="mr-3 px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700">
            Yes, Delete
        </button>
        <a asp-page="/Admin/Exams/Details" asp-route-id="@Model.ExamId"
           class="px-4 py-2 bg-gray-200 text-gray-800 text-sm font-medium rounded-md hover:bg-gray-300">
            Cancel
        </a>
    </form>
</div>