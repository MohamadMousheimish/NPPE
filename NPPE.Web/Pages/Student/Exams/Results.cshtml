@page
@model NPPE.Web.Pages.Student.Exams.ResultsModel
@{
    ViewData["Title"] = "Exam Results";
    var percentage = Math.Round((double)Model.Attempt!.Score / Model.Attempt.TotalQuestions * 100);
    var isPassing = percentage >= 65;
    var correctCount = Model.Attempt.Questions.Count(q => q.IsCorrect);
    var incorrectCount = Model.Attempt.Questions.Count(q => !q.IsCorrect);
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 px-4 sm:px-6 lg:px-8 -mx-4 sm:-mx-6 lg:-mx-8 -my-8">
    <div class="max-w-4xl mx-auto">
        <!-- Results Header Card -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-6">
            <div class="bg-gradient-to-r @(isPassing ? "from-green-500 to-emerald-600" : "from-red-500 to-rose-600") px-6 py-8">
                <div class="text-center">
                    <div class="inline-flex items-center justify-center w-20 h-20 bg-white/20 rounded-full mb-4">
                        @if (isPassing)
                        {
                            <svg class="h-10 w-10 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                <polyline points="22 4 12 14.01 9 11.01"></polyline>
                            </svg>
                        }
                        else
                        {
                            <svg class="h-10 w-10 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="15" y1="9" x2="9" y2="15"></line>
                                <line x1="9" y1="9" x2="15" y2="15"></line>
                            </svg>
                        }
                    </div>
                    <h1 class="text-3xl font-bold text-white mb-2">
                        @(isPassing ? "Congratulations!" : "Keep Practicing!")
                    </h1>
                    <p class="text-white/80">@(isPassing ? "You passed the exam" : "You didn't pass this time, but don't give up")</p>
                </div>
            </div>

            <!-- Score Display -->
            <div class="px-6 py-6 bg-gray-50 border-b border-gray-100">
                <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-8">
                    <!-- Score Circle -->
                    <div class="relative">
                        <div class="w-32 h-32 rounded-full border-8 @(isPassing ? "border-green-500" : "border-red-500") flex items-center justify-center">
                            <div class="text-center">
                                <span class="text-4xl font-bold @(isPassing ? "text-green-600" : "text-red-600")">@percentage%</span>
                                <p class="text-xs text-gray-500 uppercase tracking-wide">Score</p>
                            </div>
                        </div>
                    </div>

                    <!-- Stats -->
                    <div class="grid grid-cols-3 gap-6 text-center">
                        <div>
                            <div class="text-3xl font-bold text-gray-900">@Model.Attempt.Score</div>
                            <div class="text-sm text-gray-500">Correct</div>
                        </div>
                        <div>
                            <div class="text-3xl font-bold text-gray-900">@Model.Attempt.TotalQuestions</div>
                            <div class="text-sm text-gray-500">Total</div>
                        </div>
                        <div>
                            <div class="text-3xl font-bold @(isPassing ? "text-green-600" : "text-red-600")">@(isPassing ? "PASS" : "FAIL")</div>
                            <div class="text-sm text-gray-500">Result</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Summary Stats -->
            <div class="px-6 py-4 grid grid-cols-2 divide-x divide-gray-200">
                <div class="text-center pr-4">
                    <div class="flex items-center justify-center space-x-2">
                        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                        <span class="text-sm text-gray-600">Correct Answers</span>
                    </div>
                    <p class="text-2xl font-bold text-green-600 mt-1">@correctCount</p>
                </div>
                <div class="text-center pl-4">
                    <div class="flex items-center justify-center space-x-2">
                        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                        <span class="text-sm text-gray-600">Incorrect Answers</span>
                    </div>
                    <p class="text-2xl font-bold text-red-600 mt-1">@incorrectCount</p>
                </div>
            </div>
        </div>

        <!-- Questions Review Section -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-6">
            <div class="px-6 py-4 border-b border-gray-100">
                <h2 class="text-lg font-semibold text-gray-900">Review Your Answers</h2>
                <p class="text-sm text-gray-500">See which questions you got right and learn from your mistakes</p>
            </div>

            <div class="divide-y divide-gray-100">
                @for (int i = 0; i < Model.Attempt.Questions.Count; i++)
                {
                    var q = Model.Attempt.Questions[i];
                    <div class="p-6 @(q.IsCorrect ? "bg-green-50/50" : "bg-red-50/50")">
                        <div class="flex items-start">
                            <!-- Question Number Badge -->
                            <div class="flex-shrink-0 mr-4">
                                <div class="w-10 h-10 rounded-xl flex items-center justify-center @(q.IsCorrect ? "bg-green-500" : "bg-red-500")">
                                    @if (q.IsCorrect)
                                    {
                                        <svg class="h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <polyline points="20 6 9 17 4 12"></polyline>
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <line x1="18" y1="6" x2="6" y2="18"></line>
                                            <line x1="6" y1="6" x2="18" y2="18"></line>
                                        </svg>
                                    }
                                </div>
                            </div>

                            <!-- Question Content -->
                            <div class="flex-1">
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm font-medium text-gray-500">Question @(i + 1)</span>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(q.IsCorrect ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                        @(q.IsCorrect ? "Correct" : "Incorrect")
                                    </span>
                                </div>

                                <h3 class="text-gray-900 font-medium mb-4">@q.QuestionText</h3>

                                <!-- Answer Cards -->
                                <div class="space-y-2">
                                    <!-- Your Answer -->
                                    <div class="flex items-center p-3 rounded-lg @(q.IsCorrect ? "bg-green-100 border border-green-200" : "bg-red-100 border border-red-200")">
                                        <div class="flex-shrink-0 mr-3">
                                            <span class="inline-flex items-center justify-center w-6 h-6 rounded bg-white text-sm font-bold @(q.IsCorrect ? "text-green-600" : "text-red-600")">
                                                @q.SelectedLabel
                                            </span>
                                        </div>
                                        <div class="flex-1">
                                            <p class="text-sm font-medium @(q.IsCorrect ? "text-green-800" : "text-red-800")">
                                                Your Answer: @q.SelectedText
                                            </p>
                                        </div>
                                        @if (q.IsCorrect)
                                        {
                                            <svg class="h-5 w-5 text-green-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <polyline points="20 6 9 17 4 12"></polyline>
                                            </svg>
                                        }
                                        else
                                        {
                                            <svg class="h-5 w-5 text-red-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <line x1="18" y1="6" x2="6" y2="18"></line>
                                                <line x1="6" y1="6" x2="18" y2="18"></line>
                                            </svg>
                                        }
                                    </div>

                                    <!-- Correct Answer (if different) -->
                                    @if (!q.IsCorrect)
                                    {
                                        <div class="flex items-center p-3 rounded-lg bg-green-100 border border-green-200">
                                            <div class="flex-shrink-0 mr-3">
                                                <span class="inline-flex items-center justify-center w-6 h-6 rounded bg-white text-sm font-bold text-green-600">
                                                    @q.CorrectLabel
                                                </span>
                                            </div>
                                            <div class="flex-1">
                                                <p class="text-sm font-medium text-green-800">
                                                    Correct Answer: @q.CorrectText
                                                </p>
                                            </div>
                                            <svg class="h-5 w-5 text-green-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <polyline points="20 6 9 17 4 12"></polyline>
                                            </svg>
                                        </div>
                                    }
                                </div>

                                <!-- Feedback Message -->
                                @if (!string.IsNullOrEmpty(q.FeedbackMessage))
                                {
                                    <div class="mt-4 p-4 rounded-lg bg-white border border-gray-200">
                                        <div class="flex items-start">
                                            <div class="flex-shrink-0">
                                                <svg class="h-5 w-5 text-blue-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <circle cx="12" cy="12" r="10"></circle>
                                                    <line x1="12" y1="16" x2="12" y2="12"></line>
                                                    <line x1="12" y1="8" x2="12.01" y2="8"></line>
                                                </svg>
                                            </div>
                                            <div class="ml-3">
                                                <p class="text-sm font-medium text-gray-900">Explanation</p>
                                                <p class="text-sm text-gray-600 mt-1">@Html.Raw(q.FeedbackMessage.Replace("\n", "<br />"))</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="bg-white rounded-2xl shadow-xl p-6">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                <div class="mb-4 sm:mb-0">
                    <h3 class="text-lg font-semibold text-gray-900">What's Next?</h3>
                    <p class="text-sm text-gray-500">@(isPassing ? "Great job! Try another exam or review your answers." : "Review the explanations above and try again when ready.")</p>
                </div>
                <div class="flex space-x-3">
                    <a asp-page="Index"
                       class="px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-xl hover:bg-gray-50 transition duration-200">
                        <svg class="h-5 w-5 inline mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="19" y1="12" x2="5" y2="12"></line>
                            <polyline points="12 19 5 12 12 5"></polyline>
                        </svg>
                        All Exams
                    </a>
                    <a asp-page="Take" asp-route-id="@Model.ExamId"
                       class="px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold rounded-xl shadow-lg hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200 transform hover:scale-[1.02]">
                        <svg class="h-5 w-5 inline mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="23 4 23 10 17 10"></polyline>
                            <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
                        </svg>
                        Retake Exam
                    </a>
                </div>
            </div>
        </div>

        <!-- Back Link -->
        <div class="mt-6">
            <a asp-page="Index" class="inline-flex items-center text-gray-600 hover:text-blue-600 transition duration-200">
                <svg class="h-4 w-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Back to Exams
            </a>
        </div>
    </div>
</div>
