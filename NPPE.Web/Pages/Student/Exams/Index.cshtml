@page
@model NPPE.Web.Pages.Student.Exams.IndexModel
@{
    ViewData["Title"] = "Available Exams";
}

<div class="max-w-4xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">NPPE Practice Exams</h1>

    @if (Model.Exams.Any())
    {
        <div class="space-y-4">
            @foreach (var exam in Model.Exams)
            {
                <div class="border border-gray-200 rounded-lg p-5 hover:bg-gray-50">
                    <h2 class="text-lg font-semibold text-gray-900">@exam.Title</h2>
                    <p class="mt-1 text-gray-600">@exam.Description</p>
                    <div class="mt-3">
                        <a asp-page="Take" asp-route-id="@exam.Id"
                           class="inline-block px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700">
                            Start Exam
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-12">
            <p class="text-gray-600">No exams available at this time.</p>
        </div>
    }
</div>